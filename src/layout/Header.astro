---
import { Icon } from "astro-icon/components";
import { getEntry } from "astro:content";
const { socials } = await getEntry("config", "config")?.then(config => config.data)!;
---
<header class="flex justify-center gap-10 select-none">
    { socials?.map(social => (
        <a href={ social.link } class="text-rose-400 hover:text-rose-300 transition-colors duration-200" target="_blank" rel="noopener noreferrer">
            <Icon name={ social.icon } class="w-[24px] h-[24px] lg:w-[32px] lg:h-[32px]"/>
        </a>
    ))}
</header>