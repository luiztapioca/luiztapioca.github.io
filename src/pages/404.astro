---
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout 
    title="404 - Página não encontrada" 
    description="Esta página não existe."
>
    <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
        <div class="flex items-center gap-4 mb-6">
            <span class="text-4xl sm:text-5xl">σ(￣、￣〃)</span>
            <span class="text-6xl sm:text-7xl font-bold text-rose-500 dark:text-rose-300">404</span>
        </div>
        
        <p class="text-base sm:text-lg mb-8 text-gray-700 dark:text-gray-300">
            Essa página infelizmente não existe...
        </p>
        
        <a 
            href="/" 
            class="
                px-6 py-2 
                text-sm sm:text-base font-semibold
                text-rose-500 dark:text-rose-300
                hover:text-rose-600 dark:hover:text-rose-200
                border-2 border-rose-500 dark:border-rose-300
                hover:border-rose-600 dark:hover:border-rose-200
                rounded-md
                transition-colors
                no-underline
            "
        >
            Voltar
        </a>
    </div>
</BaseLayout>
